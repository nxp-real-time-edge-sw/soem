menuconfig MCUX_COMPONENT_middleware.soem
    bool "SOEM - Simple Open EtherCAT Master Stack"
    default n
    help
        This option will enable SOEM suite.

if MCUX_COMPONENT_middleware.soem

    config MCUX_COMPONENT_middleware.soem.enet
        bool "SOEM enet"
        depends on MCUX_COMPONENT_component.eth_phy_common
        depends on MCUX_HAS_COMPONENT_driver.enet
        select MCUX_COMPONENT_driver.enet
        help
            SOEM enet

    config MCUX_COMPONENT_middleware.soem.netc
        bool "SOEM netc"
        depends on MCUX_COMPONENT_component.eth_phy_common
        depends on MCUX_HAS_COMPONENT_driver.msgintr
        depends on MCUX_HAS_COMPONENT_driver.netc
        help
            SOEM netc    
        
    config MCUX_COMPONENT_middleware.soem.bm
        bool "SOEM baremetal"

    config MCUX_COMPONENT_middleware.soem.freertos
        bool "SOEM freertos"
        depends on MCUX_COMPONENT_middleware.freertos-kernel
        help
            SOEM Freertos interface

endif
